{% extends 'base.html.twig' %}

{% block title %}Stage index{% endblock %}

{% block body %}
    <h1>Stage index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Month_begin</th>
                <th>Year_begin</th>
                <th>Month_end</th>
                <th>Year_end</th>
                <th>Company</th>
                <th>Descriptif</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stage in stages %}
            <tr>
                <td>{{ stage.id }}</td>
                <td>{{ stage.MonthBegin }}</td>
                <td>{{ stage.YearBegin }}</td>
                <td>{{ stage.MonthEnd }}</td>
                <td>{{ stage.YearEnd }}</td>
                <td>{{ stage.Company }}</td>
                <td>{{ stage.Descriptif }}</td>
                <td>
                    <a href="{{ path('app_stage_show', {'id': stage.id}) }}">show</a>
                    <a href="{{ path('app_stage_edit', {'id': stage.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_stage_new') }}">Create new</a>
{% endblock %}
